{
    "name": "wp/multisite",
    "type": "project",
    "license": "MIT",
    "description": "Hale multisite required packages",
    "authors": [],
    "keywords": ["wordpress", "stack", "composer", "wp, multisite, php"],
    "support": {
        "issues": "https://github.com/ministryofjustice/hale-platform/issues"
    },
    "config": {
        "allow-plugins": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "https://packagist.org"
        },
        {
            "type": "composer",
            "url": "https://composer.wp.dsd.io"
        },
        {
            "type": "composer",
            "url": "https://wp-languages.github.io"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^v1.7.0",
        "vlucas/phpdotenv": "^3.0.0",
        "oscarotero/env": "^1.1.0",
        "acf/advanced-custom-fields-pro": "*",
        "ministryofjustice/wp-hale": "dev-hale-platform",
        "wpackagist-plugin/wordpress-seo": "*",
        "wpackagist-plugin/simple-301-redirects": "*",
        "wpackagist-plugin/query-monitor": "*",
        "wpackagist-plugin/ewww-image-optimizer": "*",
        "wpackagist-plugin/unconfirmed": "*",
        "wpackagist-plugin/wp-force-login": "*",
        "wpackagist-plugin/safe-svg":"*",
        "wpackagist-plugin/redirection": "*",
        "relevanssi/relevanssi-premium": "*",
        "ministryofjustice/wp-moj-components": "dev-hale-platform",
        "ministryofjustice/wp-user-roles": "*",
        "ministryofjustice/cookie-compliance-for-wordpress": "*",
        "ministryofjustice/wp-moj-blocks": "*",
        "ministryofjustice/wp-gov-uk-notify": "*",
        "ministryofjustice/wp-s3-uploads": "dev-master"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0.2"
    },
    "extra": {
        "installer-paths": {
            "wordpress/wp-content/mu-plugins/{$name}/": [
                "type:wordpress-muplugin",
                "ministryofjustice/wp-user-roles",
                "ministryofjustice/wp-gov-uk-notify"
            ],
            "wordpress/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wordpress/wp-content/themes/hale/": ["ministryofjustice/wp-hale"],
            "wordpress/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "/var/www/html"
    },
    "scripts": {
        "post-root-package-install": [],
        "test": ["phpcs"]
    }
}
